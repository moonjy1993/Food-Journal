<head>
	<style>
		body {padding-top:20px;}
	</style>
</head>

<div class="container">
    <div class="row">
		<div class="col-md-4 col-md-offset-4">
    		<div class="panel panel-default">
			  	<div class="panel-heading">
			    	<h3 class="panel-title">Please Sign In</h3>
			 	</div>
			  	<div class="panel-body">
					{{#if message}}
		     			<div class="alert alert-danger"><p>{{ message }}</p></div>
		    		{{/if}}
			    	<form accept-charset="UTF-8" action="/login" method="post" role="form" data-parsley-validate>
                    <fieldset>
			    	  	<div class="form-group">
							<input type="email" placeholder="E-mail" name="email" class="form-control" id="email" autofocus
							required data-parsley-trigger="change"
							data-parsley-type="email"
							data-parsley-required-message="Invalid Email!">
			    		</div>
			    		<div class="form-group">
			    			<input class="form-control" placeholder="Password" name="password" type="password" value="" required>
			    		</div>
			    		<div class="checkbox">
			    	    	<label>
			    	    		<input name="remember" type="checkbox" value="Remember Me"> Remember Me
			    	    	</label>
			    	    </div>
			    		<input class="btn btn-lg btn-success btn-block" type="submit" value="Login">
			    	</fieldset>
			      	</form>
			    </div>
			</div>
		</div>
	</div>
</div>